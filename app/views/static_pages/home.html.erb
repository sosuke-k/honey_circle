<% if signed_in? %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/micropost_form' %>
		</section>

	</aside>
	<div class="span8">
		<h3>やりたいこと一覧</h3>
		<%= render 'shared/feed' %>
	</div>
</div>

<% else %>
<div class="center hero-unit">
	<h1>Welcome to "Honey Circle"</h1>

	<h2>
		はじめての方は
		<a href="/about">about</a>
		までお飛びなさい
	</h2>
	<% if current_user %>
	Welcome <%= current_user.name %>!
	<%= link_to "Sign Out", signout_path %>
	<% else %>
	<%= link_to "Sign up now with ついったあかうんと!", "/auth/twitter",
	class: "btn btn-large btn-primary" %>
	<% end %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
