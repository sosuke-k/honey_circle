<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		<hr>

		<%= render 'layouts/newsfeed' %>

		</aside>
		<div class="span8">
			<h3>やりたいこと(<%= Micropost.all.length %>)</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
<div class="center hero-unit">
	<h1><span class="rotate">あなた, だれか</span>の『やりたい！』を<br>
		<span class="rotate">だれか, あなた</span>の『やりたい！』に。</h1>
<br>
	<h2>
<!-- 		はじめての方は
		<a href="/about">about</a>
		までお飛びなさい -->
	Honey Circle. は早稲田大学の情報なんとか学科の人向けに作られた「やりたいことを共有する」サービスです。
	</h2>
	<% if current_user %>
		Welcome <%= current_user.name %>!
		<%= link_to "Sign Out", signout_path %>
	<% else %>
		<%= link_to "Sign up now with ついったアカウント!", "/auth/twitter",
		class: "btn btn-2i btn-signin" %>
	<% end %>
</div>

<%#= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
<script>
$(".rotate").textrotator({
  animation: "flipUp",
  separator: ",",
  speed: 2000
});
</script>
